{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": 0,
        "allowForLoopAfterthoughts": true,
        "no-unused-vars": ["error", { "vars": "local", "args": "none", "ignoreRestSiblings": false }]
    }
}
